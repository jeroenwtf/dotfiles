[include]
  path = ~/.gitconfig.local

[core]
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes
  autocrlf = false
  safecrlf = false
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
  slog = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  sadd = !sh -c 'cd -- ${GIT_PREFIX:-.} && git add -- "$@" && git status' --
  co = checkout

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  tool = neovim

[mergetool "neovim"]
  cmd = nvim --wait $MERGED

[diff]
  tool = neovim

[difftool "neovim"]
  cmd = nvim --wait --diff $LOCAL $REMOTE

# Push easily - http://stackoverflow.com/a/23918418/89484
[push]
  default = current

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[pull]
  rebase = false
